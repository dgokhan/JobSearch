<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:JobSearch.Resources.Helpers"
             x:Class="JobSearch.Views.TabbarPage"
             HeightRequest="50"
             BackgroundColor="White">

    <Grid ColumnDefinitions="*,*,*,*">
        <Button FontFamily="IconFont" FontSize="20" 
                   Text="{x:Static helpers:IconFontHelper.Home}" TextColor="#ff"/>

        <Button Grid.Column="1" FontFamily="IconFont" FontSize="20"
                   Text="{x:Static helpers:IconFontHelper.TrayFull}" TextColor="#ff"/>

        <Button Grid.Column="2" FontFamily="IconFont" FontSize="20"
                   Text="{x:Static helpers:IconFontHelper.Bookmark}" TextColor="#ff"/>

        <Button Grid.Column="3" FontFamily="IconFont" FontSize="20"
                   Text="{x:Static helpers:IconFontHelper.Account}" TextColor="#ff"/>

    </Grid>

</Grid>

